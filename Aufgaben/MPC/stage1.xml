<?xml version="1.0" encoding="iso-8859-1"?>
<exercise type="mc">
	<input>
		<inputvalue name="tense1" type="string"/>
		<inputvalue name="tense2" type="string"/>
		<inputvalue name="tense3" type="string"/>
		<inputvalue name="correctTense" type="string"/>
		<inputvalue name="sentence" type="string"/>
		<inputvalue name="pattern" type="string" />
	</input>
	<task> Choose the tense of the following sentence [var=sentence]
	</task>
	<answers randomize="true">
		<option> [var=correctTense] </option>
		<option> [var=tense1] </option>
		<option> [var=tense2] </option>
		<option> [var=tense3] </option>
	</answers>
	<correctanswer>
		<choice pattern="[var=pattern]"/>
		<message>Sehr gut!</message> 
	</correctanswer>
	<feedback>
		<choice pattern="andere">Das ist leider falsch.</choice>
	</feedback>
	<advice/>
	<output/>
</exercise>