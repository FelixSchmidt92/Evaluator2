<?xml version="1.0" encoding="ISO-8859-1"?>
   
   <exercisechain>
    <variables>
	 <option name="context" value="'TESTCONTEXT'"/>
	 <option name="sourceTense" value="'present simple'"/>
	 <option name="targetTense" value="'past perfect progressive'"/>
     <option name="difficulty" value="'TESTDIFFICULTY'"/>
     <option name="sentenceTransformation" value="genTransform([var=context],[var=sourceTense],[var=targetTense],[var=difficulty])"/>
     <option name="sourceSentence" value="getFromList(0,[var=sentenceTransformation])"/>
	 <option name="targetSentence" value="getFromList(1,[var=sentenceTransformation])"/>
    </variables>
    <step id="1" file="stage1.xml"> 
     <input value="[var=sourceSentence]" />
	 <input value="[var=targetSentence]"/>
	 <input value="[var=sourceTense]" />
	 <input value="[var=targetTense]"/>	 
     <next default="repeat">
     <path target="end" result="100" />
     </next>
    </step>
   </exercisechain>